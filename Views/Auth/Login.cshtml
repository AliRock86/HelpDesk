@model HelpDesk.Models.User
 <div asp-validation-summary=All></div>
<main class="signup-form">
    <br />
   <div class="cotainer">
    <div class="row g-3" class="container" style="direction: rtl;">
        <div class="row justify-content-center">
            <div class="col-md-4">
                 <div class="alert alert-light text-danger font-weight-bold" role="alert"> @TempData["msg"]</div>
                <div class="card">
                    <h3 class="card-header text-center">تسجيل دخول </h3>
                    <div class="card-body">
                        <form   method="post" asp-controller="auth" asp-action="Loginh">
                            <div class="form-group mb-3">
                                <input asp-for="UserName" placeholder="أسم المستخدم" class="form-control"
                                    required autofocus>
                            </div>
                            <div class="form-group mb-3">
                                <input type="password" placeholder="كلمة المرور" asp-for="Password" class="form-control"
                                     required>
                            </div>
    

                            <div class="d-grid mx-auto">
                                <button type="submit" formmethod="post" class="btn btn-dark btn-block"> دخول</button>
                            </div>
                        </form>
                        <br />
                         <div class="d-grid mx-auto">
                        <a href="Auth/signup" class="stretched-link text-warning" style="position: relative;">أنشاء حساب</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
    
</main>
